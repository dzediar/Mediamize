<UserControl x:Class="Mediamize.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:zw="clr-namespace:zComp.Wpf;assembly=zComp.Wpf"
             xmlns:zwView="clr-namespace:zComp.Wpf.View;assembly=zComp.Wpf"
             FontSize="16">
    <zw:zStackPanel>
        <zw:zInputFrame zwView:Translator.Header="YOUTUBE_DOWNLOAD_EXE_PATH" Margin="16">
            <!--Chemin Yt-Dlp.exe-->
            <zw:zFileSelection HorizontalAlignment="Stretch" Text="{Binding YtDlpPath}" FileSelectionMode="FileOpen" Margin="4"/>
        </zw:zInputFrame>

        <zw:zInputFrame zwView:Translator.Header="FFMPEG_EXE_PATH" Margin="16 0 16 16">
            <!--Chemin FFmpeg.exe-->
            <zw:zFileSelection HorizontalAlignment="Stretch" Text="{Binding FfmpegPath}" FileSelectionMode="FileOpen" Margin="4"/>
        </zw:zInputFrame>

        <zw:zInputFrame zwView:Translator.Header="DENO_EXE_PATH" Margin="16 0 16 16">
            <!--Chemin deno.exe-->
            <zw:zFileSelection HorizontalAlignment="Stretch" Text="{Binding DenoPath}" FileSelectionMode="FileOpen" Margin="4"/>
        </zw:zInputFrame>

        <zw:zInputFrame zwView:Translator.Header="OUTPUT_PATH" Margin="16 0 16 16">
            <!--Dossier de sortie-->
            <zw:zFileSelection HorizontalAlignment="Stretch" Text="{Binding OutputPath}" FileSelectionMode="Directory" Margin="4"/>
        </zw:zInputFrame>

        <!--Ajouter les métadonnées-->
        <zw:zGrid Margin="16 0 16 16">
            <zw:zGrid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </zw:zGrid.ColumnDefinitions>
            <zw:zCheckBox Grid.Column="0" zwView:Translator.Content="EXTRACT_METADATA" IsChecked="{Binding AddMetadata}"/>
            <zw:zCheckBox Grid.Column="1" zwView:Translator.Content="REMOVESPECIALCHARS_FROM_TITLES" IsChecked="{Binding RemoveSpecialChars}"/>
        </zw:zGrid>

        <zw:zBorder BorderThickness="0 0 0 0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="80" Margin="0">
            <zw:zStackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 16 0">
                <zw:zButton Grid.Row="3" Style="{StaticResource {x:Static zw:zCompRepository.EllipseButtonStyleKey}}"
                        zwView:Translator.ToolTip="OK" zwView:Translator.Caption="OK" 
                        Margin="8" MinWidth="120" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="34"
                        ContentTemplate="{StaticResource LeftArrow}" Content="1" DialogResult="Ok"/>

                <zw:zButton Grid.Row="3" Style="{StaticResource {x:Static zw:zCompRepository.EllipseButtonStyleKey}}"
                        zwView:Translator.ToolTip="CANCEL" zwView:Translator.Caption="CANCEL" 
                        Margin="8" MinWidth="120" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="34"
                        ContentTemplate="{StaticResource Logout}" Content="1" DialogResult="Cancel"/>
            </zw:zStackPanel>
        </zw:zBorder>

    </zw:zStackPanel>
</UserControl>
