<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:zcViewModel="clr-namespace:zComp.Wpf.ViewModel;assembly=zComp.Wpf"
                    xmlns:zwView="clr-namespace:zComp.Wpf.View;assembly=zComp.Wpf"
                    xmlns:zwViewModel="clr-namespace:zComp.Wpf.ViewModel;assembly=zComp.Wpf"
                    xmlns:view="clr-namespace:Mediamize.View"
                    xmlns:viewModel="clr-namespace:Mediamize.ViewModel">

    <DataTemplate DataType="{x:Type viewModel:JustInTimeTranslationViewModel}">
        <view:JustInTimeTranslationView/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewModel:LogViewModel}">
        <view:LogView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModel:SettingsViewModel}">
        <view:SettingsView/>
    </DataTemplate>

</ResourceDictionary>